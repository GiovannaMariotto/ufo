<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.ufo.FXMLController">
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Numero di avvistamenti: ">
               <padding>
                  <Insets left="5.0" right="5.0" />
               </padding>
            </Label>
            <TextArea fx:id="txtRisultato" disable="true" prefHeight="200.0" prefWidth="200.0" />
         </children>
      </VBox>
   </center>
   <padding>
      <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
   </padding>
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Label text="Sceglie la forma e ti ritornarÃ  il numero di avvistamenti " textAlignment="CENTER" textFill="#160093">
               <font>
                  <Font name="Arial" size="13.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="5.0" top="5.0" />
               </VBox.margin>
            </Label>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Forma: ">
                     <padding>
                        <Insets left="5.0" right="5.0" top="5.0" />
                     </padding>
                     <HBox.margin>
                        <Insets top="5.0" />
                     </HBox.margin>
                  </Label>
                  <ComboBox fx:id="seglieUtente" onAction="#impostaLingua">
                     <padding>
                        <Insets left="5.0" right="5.0" top="5.0" />
                     </padding>
                     <HBox.margin>
                        <Insets top="5.0" />
                     </HBox.margin>
                  </ComboBox>
                  <Button fx:id="btnConta" mnemonicParsing="false" onAction="#doConta" text="Conta">
                     <HBox.margin>
                        <Insets left="5.0" top="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
</BorderPane>
